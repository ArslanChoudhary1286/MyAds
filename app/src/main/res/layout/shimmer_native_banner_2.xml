<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    android:id="@+id/shimmer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_240sdp"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            app:layout_constraintBottom_toTopOf="@+id/ad_call_to_action1"
            tools:layout_editor_absoluteX="16dp">

            <TextView
                android:id="@+id/ad_headline1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp"
                android:background="@color/shimmer_placeholder" />


        </LinearLayout>

        <TextView
            android:id="@+id/ad_media_shimmer"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_150sdp"
            android:background="@color/shimmer_placeholder"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ad_call_to_action1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_6sdp"
            android:gravity="center"
            android:paddingVertical="@dimen/_10sdp"
            android:textColor="@color/shimmer_placeholder"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            app:cornerRadius="@dimen/_100sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            app:backgroundTint="@color/shimmer_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="INSTALL" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.facebook.shimmer.ShimmerFrameLayout>