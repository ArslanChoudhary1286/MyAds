<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    android:id="@+id/shimmer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_240sdp"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/ad_media_shimmer"
            tools:layout_editor_absoluteX="16dp">

            <ImageView
                android:id="@+id/ad_app_icon1"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                android:background="@color/shimmer_placeholder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ad_headline1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp"
                    android:background="@color/shimmer_placeholder" />

                <TextView
                    android:id="@+id/ad_body1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@color/shimmer_placeholder" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/ad_media_shimmer"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@color/shimmer_placeholder"
            app:layout_constraintBottom_toTopOf="@+id/ad_call_to_action1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ad_call_to_action1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_6sdp"
            android:gravity="center"
            android:paddingVertical="@dimen/_10sdp"
            android:textColor="@color/shimmer_placeholder"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            app:backgroundTint="@color/shimmer_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="INSTALL" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.facebook.shimmer.ShimmerFrameLayout>